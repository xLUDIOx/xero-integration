{
  "name": "xero-integration",
  "version": "1.0.0",
  "description": "A service that Payhawk uses to integrate with Xero",
  "main": "index.js",
  "scripts": {
    "start": "nodemon --watch build -e js --inspect=0.0.0.0:9230 build/index.js | pino-pretty",
    "lint": "tslint --project . && eslint --ext .ts src/ && madge -c --extensions ts ./src && cspell '**' --no-progress",
    "fix": "tslint --project . --fix && eslint --ext .ts src/ --fix",
    "compile": "tsc -p .",
    "postinstall": "if [ \"$CI\" != \"true\" ]; then cd ./integration-tests && npm i; else echo \"no postinstall\"; fi",
    "postfix": "if [ \"$CI\" != \"true\" ]; then cd ./integration-tests && npm run fix; else echo \"no postinstall\"; fi",
    "postlint": "if [ \"$CI\" != \"true\" ]; then cd ./integration-tests && npm run lint; else echo \"no postlint\"; fi",
    "postcompile": "if [ \"$CI\" != \"true\" ]; then npm run shared && cd ./integration-tests && npm run compile; else echo \"no postcompile\"; fi",
    "pretest": "if [ \"$CI\" != \"true\" ]; then npm run compile; else echo \"no pretest\"; fi",
    "shared": "npm run shared:rm && npm run shared:cp && npm run shared:chmod",
    "shared:chmod": "find ./integration-tests/src/shared -type f -exec chmod 0444 {} +",
    "shared:cp": "cp -R ./src/shared ./integration-tests/src",
    "shared:rm": "rm -rf ./integration-tests/src/shared",
    "test": "jest",
    "snap": "jest --updateSnapshot"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/payhawk/xero-integration.git"
  },
  "author": "Payhawk team",
  "license": "MIT",
  "homepage": "https://github.com/payhawk/xero-integration#readme",
  "devDependencies": {
    "@types/jest": "26.0.23",
    "@types/jsonwebtoken": "8.5.1",
    "@types/mime-types": "2.1.0",
    "@types/module-alias": "2.0.0",
    "@types/node": "^14.17.0",
    "@types/node-rsa": "1.1.0",
    "@types/oauth": "0.9.1",
    "@types/pg": "8.6.0",
    "@types/pino": "6.3.8",
    "@types/request-promise": "4.1.47",
    "@types/restify": "8.5.1",
    "@types/restify-errors": "4.3.3",
    "@types/uuid": "8.3.0",
    "@typescript-eslint/eslint-plugin": "4.24.0",
    "@typescript-eslint/parser": "4.24.0",
    "cspell": "5.4.1",
    "eslint": "7.26.0",
    "eslint-import-resolver-typescript": "2.4.0",
    "eslint-plugin-import": "2.23.2",
    "jest": "26.6.3",
    "madge": "4.0.2",
    "nodemon": "2.0.7",
    "pino-pretty": "4.8.0",
    "ts-jest": "26.5.6",
    "tslint": "6.1.3",
    "tslint-lines-between-class-members": "1.3.6",
    "typemoq": "2.1.0",
    "typescript": "4.2.4"
  },
  "dependencies": {
    "autobind-decorator": "2.4.0",
    "axios": "0.21.1",
    "camelcase-keys": "6.2.2",
    "jimp": "0.16.1",
    "jsonwebtoken": "8.5.1",
    "mime-types": "2.1.30",
    "module-alias": "2.2.2",
    "node-rsa": "1.1.1",
    "pg": "8.6.0",
    "pino": "6.11.3",
    "pino-pretty": "4.8.0",
    "request": "2.88.2",
    "request-promise": "4.2.6",
    "restify": "8.5.1",
    "restify-errors": "8.0.2",
    "source-map-support": "0.5.19",
    "uuid": "8.3.2",
    "xero-node": "4.11.3"
  }
}
